# Production Environment Variables for AI-Powered Developer Portfolio Site
# Backend API for api.hamedelfayome.dev with DOCKER Redis and Database
# Copy this file to .env and update with your actual values

# Django Settings
SECRET_KEY=your-super-secret-production-key-here
DEBUG=False
# Your backend API domain
ALLOWED_HOSTS=api.hamedelfayome.dev,hamedelfayome.dev
ENVIRONMENT=production

# Database Configuration - Docker PostgreSQL
DB_NAME=portfolio_db
DB_USER=portfolio_user
DB_PASSWORD=your-secure-database-password
DB_HOST=db
DB_PORT=5432

# Redis Configuration - Docker Redis
REDIS_URL=redis://redis:6379/1

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# AWS S3 Configuration (for static and media files)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain.com

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@hamedelfayome.dev

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Admin Configuration
ADMIN_URL=admin/

# Monitoring and Error Tracking
SENTRY_DSN=your-sentry-dsn-here

# Celery Configuration (if using background tasks)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Performance Settings
CONN_MAX_AGE=60
CACHE_TTL=300

# Rate Limiting
RATELIMIT_ENABLE=True

# Health Check Settings
HEALTH_CHECK_ENABLED=True
HEALTH_CHECK_TIMEOUT=30

# OpenAI Settings
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT=30

# File Upload Settings
FILE_UPLOAD_MAX_MEMORY_SIZE=10485760
DATA_UPLOAD_MAX_MEMORY_SIZE=10485760

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=/var/log/django/django.log
ERROR_LOG_FILE=/var/log/django/errors.log
SECURITY_LOG_FILE=/var/log/django/security.log

# Production Flags
PRODUCTION=True
ENVIRONMENT=production
